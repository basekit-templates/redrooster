
{% extends "layout.twig" %}

{% block content %}

<div class="bk-pt-default">

<div class="feature-overlay">
   {{widget('feature', 'featurehome', {"defaultBgImg": asset('images/feature-bg.jpg'), 'positionTopPercentage': '50','showBtn': false})|raw}}
</div>

<header class="bk-header">
   {{widget('profile', 'footercolumn1socialicons', { 'profileType':'socialicons', 'socialicons':'profile'})|raw}}
   <div class="wrapper">
       <div class="companyheader">
           {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
           {{widget('companyname', 'companyname', {"business": "profile"})|raw}}
           {{widget('content', 'headercontent', {"content":"<p>Bar &amp; Grill House</p>"})|raw}}
       </div>
   </div>
</header>

<div class="menu-container">
        {{widget('extendednavigation', 'navigationheader', {})|raw}}
</div>

<div class="wrapper clearfix">
    {{zone('main')|raw}}
</div>

    <footer class="bk-footer">
        {{widget('companyaddress', 'companyaddress', {})|raw}}
        {{widget('profile', 'footercolumn1profilePhone', { 'profileType':'phone', 'phone':'profile'})|raw}} 
    </footer>

    </div>

{% endblock %}

